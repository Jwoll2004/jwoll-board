<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/floating_keyboard_bg"
    android:elevation="8dp">

    <!-- Emoji Row for Floating Mode with Dark Background and Vertical Centering -->
    <LinearLayout
        android:id="@+id/emoji_row_container"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="vertical"
        android:background="#FF2C2C2C"
        android:gravity="center_vertical"
        android:visibility="visible">

        <!-- Emoji RecyclerView with proper centering and dark background -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/emoji_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#FF2C2C2C"
            android:scrollbars="horizontal"
            android:clipToPadding="false"
            android:overScrollMode="ifContentScrolls"
            android:scrollbarStyle="insideOverlay"
            android:fadeScrollbars="true" />

    </LinearLayout>

    <!-- Floating Mode Bar with Drag Handle and Sharing -->
    <RelativeLayout
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#AA000000"
        android:padding="8dp">

        <!-- Share Text Button -->
        <Button
            android:id="@+id/share_text_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ðŸ’¬"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‰¡â‰¡â‰¡"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/normal_toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:text="Normal"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground" />
    </RelativeLayout>

    <!-- Keyboard -->
    <example.android.package2.keyboard.LatinKeyboardView
        android:id="@+id/keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EEEEEE" />

</LinearLayout>